<Window x:Class="EventManagement.Demo.Dialogs.DatePickDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventManagement.Demo.Dialogs"
        mc:Ignorable="d"
        Title="DatePickDialog" Height="300" Width="300">
    <StackPanel>
        <DatePicker x:Name="EventDatePicker" />

        <StackPanel Orientation="Horizontal">
            <Button x:Name="OkButton" Content="Ok" Click="OkButton_Click" />
            <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>
