<Window x:Class="EventManagement.Demo.Dialogs.DatePickDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventManagement.Demo.Dialogs"
        mc:Ignorable="d"
        Title="Date Picker"
        Height="200" Width="300"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">
    
    <StackPanel Margin="10">
        <DatePicker x:Name="EventDatePicker" Margin="0,10" />

        <StackPanel Orientation="Horizontal">
            <Button x:Name="OkButton" Content="Ok" Click="OkButton_Click" Style="{StaticResource StyledButton}" Margin="0,0,10,0" />
            <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Style="{StaticResource StyledButton}" />
        </StackPanel>
    </StackPanel>
</Window>
