<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="StyledButton" TargetType="{x:Type Button}">
        <Setter Property="MinHeight" Value="22.5" />
        <Setter Property="MinWidth" Value="70" />
        <Setter Property="FontSize" Value="13" />
    </Style>

    <Style x:Key="StyledGrid" TargetType="{x:Type Grid}">
        <Setter Property="Margin" Value="7.5" />
    </Style>

    <Style x:Key="StyledTextBlock" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="0,0,0,1" />
        <Setter Property="FontSize" Value="13" />
    </Style>

    <Style x:Key="HeadingStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="0,0,0,5" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="DemiBold" />
    </Style>
</ResourceDictionary>